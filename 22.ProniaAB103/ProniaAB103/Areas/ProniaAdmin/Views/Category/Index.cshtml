@model List<Category>
@{
    int count = 0;
}
<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Categories</h4>
                    <a asp-controller="category" asp-action="create" class="btn btn-success">Create Category</a>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    
                                    <th>
                                        No
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Product Count
                                    </th>

                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Category category in Model)
                                {
                                    count++;
                                    <tr>
                                        <td >
                                          @count
                                        </td>
                                        <td>
                                            @category.Name
                                        </td>
                                        <td>
                                           @category.Products.Count
                                        </td>
                                      
                                        <td>
                                            <a asp-controller="category" asp-action="update" asp-route-id="@category.Id" class="btn btn-warning"><i class="mdi mdi-pencil"></i> </a>
                                             <a asp-controller="category" asp-action="delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="mdi mdi-delete"></i> </a>
                                              <a class="btn btn-primary"><i class="mdi mdi-open-in-new"></i> </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
